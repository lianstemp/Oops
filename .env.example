# General LLM Configuration (Universal)
# Works with OpenAI, standard compatible endpoints, local LLMs (Ollama, etc.)

LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1  # or http://localhost:11434/v1 for Ollama
LLM_MODEL=gpt-4o  # or generic-model-name

# Sandbox Configuration
# Controls how tools are executed (in Docker sandbox vs locally)

SANDBOX_ENABLED=true                    # Enable/disable sandbox execution
SANDBOX_CONTAINER_NAME=oops-tools-sandbox  # Container name
SANDBOX_AUTO_START=true                 # Auto-start sandbox if not running
SANDBOX_IMAGE=oops-tools:latest         # Docker image name

# Session Configuration
# Controls session management and storage

SESSION_STORAGE_PATH=~/.oops/sessions   # Session storage directory
SESSION_EXPIRY_DAYS=7                   # Auto-cleanup sessions older than N days
SESSION_AUTO_CLEANUP=true               # Enable automatic session cleanup

# Docker Sandbox Configuration (Optional)
# These settings are used when running in Docker mode

# Resource Limits
DOCKER_CPU_LIMIT=2.0          # Maximum CPU cores
DOCKER_MEMORY_LIMIT=4G        # Maximum memory
DOCKER_CPU_RESERVATION=0.5    # Reserved CPU cores
DOCKER_MEMORY_RESERVATION=512M # Reserved memory

# Network Configuration
DOCKER_NETWORK_ISOLATION=true  # Enable network isolation
DOCKER_DNS_PRIMARY=8.8.8.8     # Primary DNS server
DOCKER_DNS_SECONDARY=1.1.1.1   # Secondary DNS server

# Tool Installation Preferences
INSTALL_METASPLOIT=true        # Install Metasploit Framework
INSTALL_GOBUSTER=true          # Install Gobuster
INSTALL_FFUF=true              # Install FFUF
